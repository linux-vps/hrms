{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "modules/payroll/config/**/*",
        "outDir": "dist/src/modules/payroll/config"
      },
      {
        "include": "templates/**/*",
        "outDir": "dist/src"
      }
    ]
  }
}
